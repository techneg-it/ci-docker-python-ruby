{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  enabledManagers: [
    'copier',
    'git-submodules',
  ],
  extends: [
    'config:recommended',
    'docker:pinDigests',
  ],
  'git-submodules': {
    enabled: true,
  },
  packageRules: [
    {
      extends: [
        ':semanticCommitScopeDisabled',
        ':semanticPrefixFix',
      ],
      automerge: true,
      matchPackageNames: [
        '//ci-pre-commit$/',
      ],
    },
    {
      automerge: true,
      matchManagers: [
        'git-submodules',
      ],
    },
  ],
}
